<Window x:Class="AgendaMVC_WPF.view.AjouterContact"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ajouter un contact"
        Height="300" Width="400"
        WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20">
        <TextBlock Text="Ajouter un contact" FontWeight="Bold" FontSize="16" Margin="0 0 0 10"/>

        <TextBlock Text="Nom"/>
        <TextBox x:Name="NomBox" Margin="0 5"/>

        <TextBlock Text="Prénom"/>
        <TextBox x:Name="PrenomBox" Margin="0 5"/>

        <TextBlock Text="Email"/>
        <TextBox x:Name="EmailBox" Margin="0 5"/>

        <TextBlock Text="Téléphone"/>
        <TextBox x:Name="TelBox" Margin="0 5"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Annuler" Click="Annuler_Click" Margin="0 0 10 0"/>
            <Button Content="Valider" Click="Valider_Click" Background="MediumPurple" Foreground="White"/>
        </StackPanel>
    </StackPanel>
</Window>
