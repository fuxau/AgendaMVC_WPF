<UserControl x:Class="AgendaMVC_WPF.view.Contactes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <!-- DataGrid stylisé reprenant le code ressource fourni -->
        <DataGrid x:Name="membersDataGrid"
                  RowStyle="{DynamicResource DataGridRowStyle1}"
                  ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}"
                  CellStyle="{DynamicResource DataGridCellStyle1}"
                  Style="{DynamicResource DataGridStyle1}"
                  ItemsSource="{Binding Contacts}" 
                  AutoGenerateColumns="False"
                  Margin="10">
            <DataGrid.Columns>
                <!-- Colonne de sélection avec une CheckBox -->
                <DataGridCheckBoxColumn Header="C" CanUserResize="False" Width="Auto" 
                                        ElementStyle="{StaticResource CheckBoxStyle1}">
                    <DataGridCheckBoxColumn.HeaderTemplate>
                        <DataTemplate>
                            <CheckBox Style="{StaticResource CheckBoxStyle1}"/>
                        </DataTemplate>
                    </DataGridCheckBoxColumn.HeaderTemplate>
                </DataGridCheckBoxColumn>

                <!-- Colonne affichant un numéro (ou index) -->
                <DataGridTextColumn Header="#" IsReadOnly="True" CanUserResize="False" Width="Auto" 
                                    Binding="{Binding Id}"/>

                <!-- Colonne 'Member' avec un cercle affichant un caractère et le nom -->
                <DataGridTemplateColumn Header="Nom" IsReadOnly="True" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Border Width="25" Height="25" CornerRadius="12.5" Margin="0,0,10,0" 
                                        Background="{Binding BgColor}">
                                    <TextBlock Text="{Binding Character}" 
                                               VerticalAlignment="Center" 
                                               HorizontalAlignment="Center" 
                                               Foreground="White" 
                                               Margin="0,0,0,1"/>
                                </Border>
                                <TextBlock Text="{Binding Nom}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Colonne 'Prenom' -->
                <DataGridTextColumn Header="Prenom" Binding="{Binding Prenom}" IsReadOnly="True" Width="*"/>

                <!-- Colonne 'Email Address' -->
                <DataGridTextColumn Header="Email Address" Binding="{Binding Email}" IsReadOnly="True" Width="*"/>

                <!-- Colonne 'Phone Number' -->
                <DataGridTextColumn Header="Phone Number" Binding="{Binding Telephone}" IsReadOnly="True" Width="*"/>

                <!-- Colonne 'Operations' avec boutons d'édition et de suppression -->
                <DataGridTemplateColumn Header="Operations" IsReadOnly="True" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <!-- Bouton Edit -->
                                <Button Width="30" Height="30"
                        Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                        CommandParameter="{Binding}">
                                    <Icon:PackIconMaterial Kind="PencilOutline" Width="16" Height="16"/>
                                </Button>

                                <!-- Bouton Remove -->
                                <Button Width="30" Height="30" Margin="5,0,0,0"
                        Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                        CommandParameter="{Binding}">
                                    <Icon:PackIconMaterial Kind="DeleteOutline" Width="16" Height="16"/>
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>

        </DataGrid>
        <TextBlock x:Name="DernierIdTextBlock"
           FontWeight="Bold"
           Margin="10"
           Foreground="DarkSlateGray"/>
    </Grid>
</UserControl>
